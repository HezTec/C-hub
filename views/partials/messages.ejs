<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/alertCustom.css">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    </head>
  </head>
<body>


<% if(typeof errors!= 'undefined') { %>
      <%    errors.forEach(function(error){ %>
        <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-around" role="alert">
          <%=error.msg%>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <%    })        %>
      <% } %>


<% if(error == '' && locals.success_msg.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show d-flex justify-content-around" role="alert">
    <%=success_msg%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
      <% }%>

<% if(error != '' && locals.error_msg.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-around" role="alert">
    <%=error_msg%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
      <% } %>

<% if(error != '') { %>
  <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-around" role="alert">
    <%=error%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
      <% } %>

    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>
