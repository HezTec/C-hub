  <header class="masthead">
    <div class="intro-body">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h3 class="brand-heading">Welcome <%= user.username %>!</h3>


            <button onclick="showURL()" class="btn btn-primary btn-lg btn-default" id="linkBtn" hidden='true'> Add a link </button>
            <button onclick="showEmbed()" class="btn btn-primary btn-lg btn-default" id="EmbedBtn" hidden='true'> Add an embed </button>


            <div class="linkInput">
              <form action="/dashboard" method="post" id="linkForm" hidden>
                <input type="text" name="title" id="title" placeholder="Title">
                <input type="url" name="url" id="url" placeholder="Link">
                <button type="submit" value="Submit">Submit</button>
              </form>
            </div>
            <div class="EmbedInput">
              <form action="/dashboard" method="post" id="EmbedForm" hidden>
                <input type="text" name="embedTitle" id="embedTitle" placeholder="Title/Site">
                <input name="embedUrl" id="embedUrl" placeholder="Paste Embed from Site">
                <button type="submit" value="Submit" onclick="embedSubmit();">Submit</button>
              </form>
            </div>



            <br>

            <div class="container">
              <%for (let index = 0; index < user.embeds.length; index++) {%>
              <div class="row">
                <div class="col-md-12">
                  <button class="emb-btn btn btn-primary btn-lg btn-default" style="margin: 5px; width: 75%;" onclick="showEmbedContent('<%=user.embeds[index]._id%>','<%=user.embeds[index].url%>')"> <%=user.embeds[index].title%></button>
                  <button class="btn remove-btn btn-outline-danger" hidden="true" onmousedown="delEmb('<%=user.embeds[index]._id%>','<%=index%>')"><i class="fa fa-trash" aria-hidden="true"></i> </button>
                  <div id='<%=user.embeds[index]._id%>' hidden=true>
                    <%-user.embeds[index].url%>
                  </div>
                </div>
              </div>
              <% } %>
            </div>

            <div class="container">
              <% for( let index = 0; index < user.urls.length; index++ ) { %>
              <div class="row">
                <div class="col-md-12">
                  <br><a class="btn btn-primary btn-lg btn-default" style="margin: -7px; width: 75%;" href="<%=user.urls[index].url%>"><%=user.urls[index].title%></a>
                  <button class="btn remove-btn btn-outline-danger" style="margin: 10px" hidden="true" onmousedown="delLink('<%=user.urls[index]._id%>')"><i class="fa fa-trash" aria-hidden="true"></i> </button>

                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
